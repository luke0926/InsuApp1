@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/scrollsheet.css" runat="server" type="text/css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />


<div class="row justify-content-center mt-5">
    <div class="col-sm-5">
        <div class="card border-secondary">
            <div class="card-header bg-secondary bg-gradient d-flex justify-content-between">
                <a href="/Home/Index" class="btn-sm btn-close" arial-label="Close"></a>
                <!--style="background:rgb(222,226,230)"-->
                <div class="dropdown btn-group">
                    <a class="text-black-50" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-bars fa-ml"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <a class="dropdown-item text-secondary" id="forgot-password" asp-page="./ForgotPassword">Zapomenuté heslo</a>
                        <a class="dropdown-item text-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrace</a>
                        <a class="dropdown-item text-secondary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Zaslat znovu potvrzovací email</a>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                   <div class="row justify-content-center d-flex mt-3">
                        <div class="col-md-8">
                            <section>
                                <img src="/images/User2.png" style="width:120px;margin-top:-60px" alt="User" class="img-fluid img-thumbnail rounded-circle border-1 mb-3">
                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3 text-secondary">
                                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="uživatelské jméno" />
                                        <label asp-for="Input.UserName" class="form-label">Uživatelské jméno</label>
                                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 text-secondary">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="heslo" />
                                        <label asp-for="Input.Password" class="form-label">Heslo</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-3 text-muted">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" id="cb1" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <div>
                                        <!--<button id="login-submit" type="submit" class="w-100 mb-3 btn btn-sm btn-outline-secondary">Sign In</button>-->
                                        <button type="submit" class="w-100 mb-3 btn btn-sm btn-outline-secondary">Přihlásit se</button>
                                    </div>
                                </form>
                            </section>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
