@model InsuApp1.Models.User

<link rel="stylesheet" href="~/css/deleteAction.css" runat="server" type="text/css" asp-append-version="true" />

@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="addEmployee">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addEmployeeLabel"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete">
                  <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <input type="hidden" asp-for="@Model.UserId" />
                     <div class="container1 text-secondary">
                        <h1>Zrušení účtu</h1>
                        <p>Opravdu chcete zrušit účet pro <b>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</b>?</p>

                        <div class="clearfix">
                            <button type="button" class="cancelbtn button1" data-bs-dismiss="modal">Zavřít</button>
                            <button type="button" class="deletebtn button1" data-save="modal">Smazat</button>
                        </div>
                     </div>
                </form>
            </div>                             
        </div>
    </div>
</div>
