@model InsuApp1.Models.MainInsurance

@{
    ViewData["Title"] = "Edit";
}

<div class="modal fade" id="addEmployee">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-secondary" id="addEmployeeLabel">Aktualizace pojištění</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.MainInsuranceId" />
                        <label asp-for="MainInsuranceName" class="control-label fw-bold text-secondary">Název pojištění</label>
                        <input asp-for="MainInsuranceName" class="form-control" />
                        <span asp-validation-for="MainInsuranceName" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
                <button type="button" class="btn btn-secondary" data-save="modal">Uložit</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on('click', '#backLink', function () {
        history.go(-1);
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
